{
    "name": "amber/benchmark",
    "description": "Benchmark framework",
    "type": "library",
    "license": "GPL",
    "authors": [
        {
            "name": "Deivi Pena",
            "email": "systemson@gmail.com"
        }
    ],
    "minimum-stability": "dev",
    "prefer-stable": true,
    "autoload": {
        "psr-4": {
            "Amber\\Benchmark\\": "src/"
        }
    },
    "require": {
        "symfony/console": "^3.4",
        "amber/container": "dev-master",
        "amber/cache": "dev-master",
        "amber/filesystem": "dev-master"
    },
    "require-dev": {
        "phpdocumentor/phpdocumentor": "^2.0",
        "phpunit/phpunit": "^6.5"
    },
    "scripts": {
        "test": "phpunit --coverage-html ./tmp/coverage/",
        "docs": "phpdoc -d ./src -i Tests/ -t ./tmp/docs/api"
    }
}
